<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivity" />

    <style name="MainActivity.appbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActivityAppBarCenterTitleStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="android:titleTextAppearance">@style/BoldTitleTextAppearance</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="BoldTitleTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="circleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/roundShape</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProfileInfoTextStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>