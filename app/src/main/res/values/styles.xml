<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivity"/>
    <style name="MainActivity.appbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IssueFragment"/>
    <style name="IssueFragment.Filter" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="roundShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="roundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/roundShape</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>